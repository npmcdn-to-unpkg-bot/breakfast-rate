	<div class="row">
		<h1>Breakfast Recipes</h1>
	</div>

	<div class=" grid">
		
		<% recipes.forEach(function(recipe){ %>
			<div class="grid-item-food">
				
				<h2><%=recipe.name%></h2>
				<img class="img-responsive " src="<%=recipe.image%>">
				<p><%=recipe.description%></p>
				<a href="/recipes/<%=recipe._id%>">Learn More</a>	
			</div>
	<% }); %>

	</div>




