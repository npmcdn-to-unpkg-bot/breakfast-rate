<% include partials/header %>




<!-- <br><a href="/recipes/new">Add New Recipe</a> -->


<div class="container">
	
	<div class="row">
		<h1>Breakfast Recipes</h1>
	</div>

	<div class="grid">
  	<div class="grid-sizer"></div>
		
		<% recipes.forEach(function(recipe){ %>
			<div class="grid-item">
				
				<a href="/recipes/<%=recipe._id%>" class="grid-item-inner">
					<h2><%=recipe.name%></h2>
					<img class="img-responsive " src="<%=recipe.image%>">
					<p><%=recipe.description%></p>
					<!-- <a href="/recipes/<%=recipe._id%>">Learn More</a>	 -->
				</a>

			</div>
	<% }); %>

	</div>

</div>

<% include partials/footer %>