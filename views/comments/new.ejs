<% include ../partials/header %>

<div class="container">

	<div class="new-edit-container">

		<h1>Add new comment to <%=recipe.name%></h1>

		<form action="/recipes/<%=recipe._id%>/comments" method="POST" id="commentForm">

			<div class="form-group">
				<label>Your comment:</label>
				<textarea name="text" class="form-control" rows="4"></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-warning">Add Comment</button>
			</div>
		</form>

		<a class="btn btn-xs btn-default" href="/recipes/<%=recipe._id%>">Cancel</a>
	</div>
</div>



<% include ../partials/footer %>