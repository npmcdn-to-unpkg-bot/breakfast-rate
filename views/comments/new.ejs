<% include ../partials/header %>

<div class="container">

	<div style="width:30%; margin:25px auto">

		<h1>Add new comment to <%=recipe.name%></h1>

		<form action="/recipes/<%=recipe._id%>/comments" method="POST">

			<div class="form-group">
				<label>Your comment:</label>
				<input type="text" name="comment[text]" placeholder="Comment" class="form-control">
			</div>
			<div class="form-group">
				<button class="btn btn-warning">Add Comment</button>
			</div>
		</form>

		<a class="btn btn-xs btn-default" href="/recipes/<%=recipe._id%>">Cancel</a>
	</div>
</div>



<% include ../partials/footer %>