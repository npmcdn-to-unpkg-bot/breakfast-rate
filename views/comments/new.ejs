<% include ../partials/header %>

<h1>Add new comment to <%=recipe.name%></h1>

<form action="/recipes/<%=recipe._id%>/comments" method="POST">
	
	<div class="form-group">
		<input type="text" name="comment[author]" placeholder="Your Name">
	</div>

	<div class="form-group">
		<input type="text" name="comment[text]" placeholder="Comment">
	</div>
	<div class="form-group">
		<button>Add Comment</button>
	</div>
</form>

<a href="/recipes/:id">Go back to recipes</a>



