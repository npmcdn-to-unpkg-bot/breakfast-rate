<% include ../partials/header %>

<div class="container">

	<div style="width:30%; margin:25px auto">

		<h1>Edit Comment</h1>

		<form action="/recipes/<%=recipe_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">

			<div class="form-group">
				<label>Your comment:</label>
				<input type="text" name="comment[text]" value="<%=comment.text%>" class="form-control">
			</div>
			<div class="form-group">
				<button class="btn btn-warning">Update Comment</button>
			</div>
		</form>

		<a href="/recipes/:id">Go back to recipes</a>
	</div>
</div>



<% include ../partials/footer %>