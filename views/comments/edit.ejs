<% include ../partials/header %>

<div class="container">

	<div class="new-edit-container">

		<h1>Edit Comment</h1>

		<form action="/recipes/<%=recipe_id%>/comments/<%=comment._id%>?_method=PUT" method="POST" id="commentForm">

			<div class="form-group">
				<label>Your comment:</label>
				<textarea name="text" class="form-control" rows="4"><%=comment.text%></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-warning">Update Comment</button>
			</div>
		</form>

		<a href="/recipes/:id">Go back to recipes</a>
	</div>
</div>



<% include ../partials/footer %>