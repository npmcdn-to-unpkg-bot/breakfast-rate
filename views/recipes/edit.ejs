<% include ../partials/header %>

<h1>Edit <%=recipe.name%></h1>

<form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
	
	<div class="form-group">
		<input type="text" name="recipe[name]" placeholder="Name" value="<%=recipe.name%>">
	</div>

	<div class="form-group">
		<input type="text" name="recipe[image]" placeholder="Image URL" value="<%=recipe.image%>">
	</div>

	<div class="form-group">
		<input type="text" name="recipe[description]" placeholder="Description" value="<%=recipe.description%>">
	</div>
	<div class="form-group">
		<button>Edit</button>
	</div>
</form>

<a href="/recipes/<%=recipe._id%>">Go back</a>

<% include ../partials/footer %>
